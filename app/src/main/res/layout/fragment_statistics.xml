<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/overall_padding">

    <ImageView
        android:id="@+id/ivSongCover"
        android:layout_width="0dp"
        android:layout_height="150dp"

        android:src="@drawable/cover_art"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Song"
        app:layout_constraintStart_toEndOf="@+id/ivSongCover"
        app:layout_constraintBottom_toTopOf="@id/tvSongCount"
        app:layout_constraintTop_toTopOf="@+id/ivSongCover" />

    <TextView
        android:id="@+id/tvSongCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        app:layout_constraintBottom_toBottomOf="@+id/ivSongCover"
        app:layout_constraintStart_toStartOf="@+id/tvSongName"
        app:layout_constraintTop_toBottomOf="@+id/tvSongName" />

</androidx.constraintlayout.widget.ConstraintLayout>